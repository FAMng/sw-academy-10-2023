<div>
    <h2>Я TWIG</h2>
    {% for user in users %}
        <ul>
            <li>{{ user.id|e }}</li>
            <li>{{ user.first_name|e }}</li>
            <li>{{ user.last_name|e }}</li>
            <li>{{ user.email|e }}</li>
            <li>{{ user.login|e }}</li>
        </ul>
    {% endfor %}
</div>

{% if users is not empty %}
    <ul role="list" class="divide-y divide-gray-100">
        {% for user in users %}
            <li class="flex gap-x-4 py-5">
                <a href="/exampleUsers/show/?id={{ user.id }}" class="min-w-0">
                    <p class="text-sm font-semibold leading-6 text-gray-900">{{ user.login|e }}</p>
                    <p class="text-sm font-semibold leading-6 text-gray-900">{{ user.first_name|e }} {{ user.last_name|e }}</p>
                    <p class="mt-1 truncate text-xs leading-5 text-gray-500">{{ user.email|e }}</p>
                </a>
            </li>
            <div class="overflow-hidden bg-white shadow sm:rounded-lg">
                <div class="px-4 py-6 sm:px-6">
                    <h3 class="text-base font-semibold leading-7 text-gray-900">Информация о пользователе</h3>
                </div>
                <div class="border-t border-gray-100">
                    <dl class="divide-y divide-gray-100">
                        <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                            <dt class="text-sm font-medium text-gray-900">Имя</dt>
                            <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0">{{ user.first_name|e }}</dd>
                        </div>
                        <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                            <dt class="text-sm font-medium text-gray-900">Отчество</dt>
                            <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0">{{ user.last_name|e }}</dd>
                        </div>
                        <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                            <dt class="text-sm font-medium text-gray-900">Email</dt>
                            <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0">{{ user.email|e }}</dd>
                        </div>
                        <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                            <dt class="text-sm font-medium text-gray-900">Дата добавления</dt>
                            <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0">{{ user.created_at|e }}</dd>
                        </div>
                        <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                            <dt class="text-sm font-medium text-gray-900">Дата обновления</dt>
                            <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0">{{ user.updated_at|e }}</dd>
                        </div>
                    </dl>
                </div>
            </div>
        {% endfor %}
    </ul>
{% endif %}



