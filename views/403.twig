{% extends "layouts/main.twig" %}

{% block stylesheets %}
    <style>
        .main {
            min-height: 600px;
            margin: 0 auto;
            width: auto;
            max-width: 460px;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        :root {
            --font-header: 'Nova Mono', monospace;
            --font-text: 'Open Sans', sans-serif;
            --color-theme: #F1EEDB;
            --color-bg: #282B24;

            --animation-sentence: 'Ты серьезно думал попасть сюда?';
            --animation-duration: 25s;
        }
        body {
            width: 100%;
            font-family: var(--font-text);
            color: var(--color-theme);
            background: var(--color-bg);
            overflow: hidden;
        }
        .container {
            text-align: center;
            margin: 1rem 0.5rem 0;
        }
        .container h1 {
            font-family: var(--font-header);
            font-size: calc(4rem + 2vw);
            text-transform: uppercase;
        }
        .container p {
            text-transform: uppercase;
            letter-spacing: 0.2rem;
            font-size: 2rem;
            margin: 1.5rem 0 3rem;
        }
        .ghost {
            position: absolute;
            bottom: 5px;
            left: calc(50% - 100px);
            width: 200px;
            height: 200px;
            animation: hoverGhost calc(var(--animation-duration)/2) ease-in-out 2;

        }
        .ghost:before {
            content: var(--animation-sentence);
            color: var(--color-theme);
            border-radius: 50%;
            position: absolute;
            bottom: 100%;
            text-align: center;
            line-height: 2;
            padding: 1rem;
            visibility: hidden;
            opacity: 0;
            animation:
                    showText calc(var(--animation-duration)/8) calc(var(--animation-duration)*3/16) ease-out forwards,
                    showNewText calc(var(--animation-duration)/8) calc(var(--animation-duration)*27/40) ease-out forwards,
                    showFinalText calc(var(--animation-duration)/8) var(--animation-duration) ease-out forwards;

        }
        @keyframes hoverGhost {
            25% {
                transform: translateX(20vw);
            }
            75% {
                transform: translateX(-20vw);
            }
        }
        @keyframes showText {
            2% {
                opacity: 1;
                visibility: visible;
            }
            98% {

                opacity: 1;
                visibility: visible;
            }
            99% {
                --animation-sentence: 'Ты серьезно думал попасть сюда?';
                opacity: 0;
                visibility: hidden;
            }
            100% {
                --animation-sentence: 'Ты слишком самоуверенны';
            }
        }
        @keyframes showNewText {
            2% {
                --animation-sentence: 'Ты слишком самоуверенны';
                opacity: 1;
                visibility: visible;
            }
            98% {

                opacity: 1;
                visibility: visible;
            }
            99% {
                --animation-sentence: 'Ты слишком самоуверенны';
                opacity: 0;
                visibility: hidden;
            }
            100% {
                --animation-sentence: 'Ладно, я устал летать туда сюда. Постою тут';
            }
        }
        @keyframes showFinalText {
            2% {
                opacity: 1;
                visibility: visible;
            }
            98% {
                opacity: 1;
                visibility: visible;
            }
            100% {
                opacity: 0;
                visibility: hidden;
            }
        }
        @media (max-width: 414px){
            .main{
                min-height: 100px;
            }
            .ghost {
                position: absolute;
                bottom: 0;
                left: calc(50% - 75px);
                width: 200px;
                height: 150px;
            }
            .container p {
                font-size: 1rem;
                margin: 0.5rem 0 0.5rem;
            }
        }
        @media (max-width: 375px){
            .main{
                min-height: 100px;
            }
            .ghost {
                position: absolute;
                bottom: 0;
                left: calc(50% - 75px);
                width: 200px;
                height: 50px;
            }
            .container p {
                font-size: 1rem;
                margin: 0.5rem 0 0.5rem;
            }
        }
    </style>
{% endblock %}
